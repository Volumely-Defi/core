{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "module": "commonjs",
      "noImplicitAny": true,
      "lib": ["ESNext", "DOM"],
      "outDir": "./dist",
      "target": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true ,
      "allowJs": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules", "dist"]
  }
  